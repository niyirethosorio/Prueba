<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carreras"
        android:src="@mipmap/programas"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/sedes" />

    <ImageButton
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:id="@+id/sedes"
        android:src="@mipmap/sedes"
        android:layout_alignParentStart="false"
        android:layout_centerVertical="true"
        android:onClick="mostrarsedes" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noticias"
        android:src="@mipmap/noticias"
        android:layout_below="@+id/sedes"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Carreras"
        android:id="@+id/textView"
        android:textColor="#f5fefe"
        android:layout_alignBottom="@+id/carreras"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="false"
        android:longClickable="false"
        android:textSize="30dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@mipmap/notas"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sedes"
        android:id="@+id/textView2"
        android:textColor="#f5fefe"
        android:layout_alignWithParentIfMissing="false"
        android:longClickable="false"
        android:textSize="30dp"
        android:layout_above="@+id/noticias"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mis notas"
        android:id="@+id/textView3"
        android:textColor="#f5fefe"
        android:layout_alignWithParentIfMissing="false"
        android:autoText="false"
        android:longClickable="false"
        android:textSize="30dp"
        android:layout_above="@+id/noticias"
        android:layout_toEndOf="@+id/sedes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Noticias"
        android:id="@+id/textView4"
        android:textColor="#f5fefe"
        android:layout_alignWithParentIfMissing="false"
        android:autoText="false"
        android:longClickable="false"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
